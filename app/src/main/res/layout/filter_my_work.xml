<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="false">

    <Button
        android:id="@+id/btMonday_work"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        android:background="#CAE1AF"
        android:clickable="true"
        android:onClick="onClick"
        android:text="Monday_Work"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btTuesday_Work"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="52dp"
        android:background="#CAE1AF"
        android:clickable="true"
        android:text="Tuesday_Work"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btWednesday_Work"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="180dp"
        android:background="#CAE1AF"
        android:clickable="true"
        android:text="Wednesday_Work"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btThursday_Work"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="180dp"
        android:background="#CAE1AF"
        android:clickable="true"
        android:text="Thursday_Work"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btFriday_Work"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="304dp"
        android:background="#CAE1AF"
        android:clickable="true"
        android:text="Friday_Work"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btSaturday_Work"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="304dp"
        android:background="#CAE1AF"
        android:clickable="true"
        android:text="Saturday_Work"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btSunday_Work"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="440dp"
        android:background="#CAE1AF"
        android:clickable="true"
        android:text="Sunday_Work"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btExtra_Work"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="440dp"
        android:background="#CAE1AF"
        android:clickable="true"
        android:text="Extra_Work"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
