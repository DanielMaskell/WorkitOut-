<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".manager_add_arrangement">


    <LinearLayout

       android:layout_width = "match_parent"
       android:layout_height = "wrap_content"
       android:orientation="vertical">

        <EditText
        android:id="@+id/btMonday_Work1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"/>

        <EditText
        android:id="@+id/btTuesday_Work2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="number"
        android:padding="10dp"/>

        <EditText
            android:id="@+id/btWednesday_Work3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="number"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/btTursday_Work4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="number"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/btFriday_Work5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="number"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/btExtra_Work6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="number"
            android:padding="10dp"/>
        
        <Button
        android:id="@+id/btn_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Insert" />


    </LinearLayout>

</LinearLayout>

