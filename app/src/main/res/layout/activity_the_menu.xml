<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <Button
        android:id="@+id/roster"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:text="Roster"
        android:visibility="visible"/>

    <Button
        android:id="@+id/details"
        android:layout_width="191dp"
        android:layout_height="141dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        android:layout_alignParentStart="@id/roster"
        android:layout_below="@id/roster"
        android:clickable="true"
        android:text="Details"
        android:visibility="visible" />

    <Button
        android:id="@+id/schedule"
        android:layout_width="191dp"
        android:layout_height="141dp"
        android:layout_alignParentLeft="@id/details"
        android:layout_below="@id/details"
        android:clickable="true"
        android:text="Schedule"
        android:visibility="visible"/>

    <Button
        android:id="@+id/notifications"
        android:layout_width="191dp"
        android:layout_height="141dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/sickLeave"
        android:clickable="true"
        android:text="Notifications"
        android:visibility="visible" />

    <Button
        android:id="@+id/annualLeave"
        android:layout_width="191dp"
        android:layout_height="141dp"
        android:layout_alignParentLeft="@id/schedule"
        android:layout_below="@id/schedule"
        android:clickable="true"
        android:text="Annual Leave"
        android:visibility="visible"/>

    <Button
        android:id="@+id/sickLeave"
        android:layout_width="191dp"
        android:layout_height="141dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/roster"
        android:clickable="true"
        android:text="Sick Leave"
        android:visibility="visible"/>

    <Button
        android:id="@+id/calendar"
        android:layout_width="191dp"
        android:layout_height="141dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/notifications"
        android:clickable="true"
        android:text="Calendar"
        android:visibility="visible"/>

</RelativeLayout>